<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <!--
        webkit_header="base_headers_webkit.base_reports_portrait_header"
    -->

    <record id="isf_treasury_report_webkit_header" model="ir.header_webkit">
        <field name="footer_html"><![CDATA[]]></field>
        <field name="orientation">Landscape</field>
        <field name="format">A4</field>
        <field name="html"><![CDATA[
<html>
   <head>
       <meta content="text/html; charset=UTF-8" http-equiv="content-type"/>
       <script>
           function subst() {
           var vars={};
           var x=document.location.search.substring(1).split('&');
           for(var i in x) {var z=x[i].split('=',2);vars[z[0]] = unescape(z[1]);}
           var x=['frompage','topage','page','webpage','section','subsection','subsubsection'];
           for(var i in x) {
           var y = document.getElementsByClassName(x[i]);
           for(var j=0; j<y.length; ++j) y[j].textContent = vars[x[i]];
               }
           }
       </script>
       <style type="text/css">
       
           ${css}
       </style>
   </head>
   <body style="border:0; margin: 0;" onload="subst()">
       <table class="header" style="border-bottom: 1px solid black; width: 100%">
           <tr >
               <td style="text-align:right;font-size:12;" width="15%">${time.strftime('%m/%d/%Y %I:%M')}</td>
               <td style="text-align:center;font-size:16;" width="78%">${company.partner_id.name |entity}</td>
               <td style="text-align:left;font-size:12;" width="3%"><span class="page"/>  </td>
               <td style="text-align:left;font-size:12;" width="1%"> /</td>
               <td style="text-align:right;font-size:12;" width="3%"><span class="topage"/></td>
           </tr>
       </table> ${_debug or ''|n} </body>
</html>

        ]]>
        </field>
        <field eval="25.0" name="margin_top"/>
        <field eval="5.0" name="margin_bottom"/>
        <field name="css"><![CDATA[
body, table, td, span, div {
    font-family: Helvetica, Arial;
}

body {
	font-family:Arial;
	font-size:12;
}

.header {
    margin-left:0;
    text-align:left;
    width:300px;
    font-size:12;
}

.title {
	font-size:16;
	font-weight: bold;
}


.basic_table{
	text-align:center;
	border:1px solid lightGrey;
	border-collapse: collapse;
}

.basic_table td {
	border:1px solid lightGrey;
	font-size:12;
}

.row { 
    width: "100%";
    border-top: thin solid  #ffffff ;
    font-size:12;
}

tfoot.totals tr:first-child td{
    padding-top: 15px;
}

.label {
    width: 80%;
}

.currency {
    width: "10%";
    text-align: right;
    white-space: nowrap;
}

.tr_bottom_line{
    border-bottom: thin solid black;
    width:100%;
}

tr.table_header{
    font-weight: bold;
    font-family: sans-serif, serif;
    font-size: 14px;
    caption-side: top;
    padding: 5px;
}
 ]]>
    </field>
        <field name="name">106 - Treasury Report Webkit Header</field>
    </record>

    <report id="isf_treasury_report"
            name="isf.treasury.webkit"
            auto="False"
            menu="False"
            model="isf.treasury.report.view"
            webkit_header="isf_treasury_report_webkit_header"
            file="isf_treasury_budget_report/report/treasury.mako"
            string="Treasury Report"
            header="True"
            report_type="webkit"/>

    <record id="view_isf_treasury_report_view_form" model="ir.ui.view">
        <field name="name">isf.treasury.report.view.form</field>
        <field name="model">isf.treasury.report.view</field>
        <field name="arch" type="xml">
            <form string="Treasury Report" version="7.0" create="false">
                <group string="Choose Fiscal Year">
                	<field name="fiscalyear_id" options="{'create' : false,'create_edit':false}" required="1" />
                    <field name="divisor" />
                    <field name="target_move" />
                </group>
                <footer>
                    <button name="%(isf_treasury_report)d" string="Print" type="action" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_isf_treasury_report_view_tree" model="ir.actions.act_window">
        <field name="name">ISF St.Luke Hospital Treasury Budget Report</field>
        <field name="res_model">isf.treasury.report.view</field>
        <field name="view_type">tree</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_isf_treasury_report_view_form"/>
    </record>

    <menuitem name="Treasury Report" 
              id="menu_isf_treasury_report" 
              parent="account.final_accounting_reports" 
              action="action_isf_treasury_report_view_tree"
              groups="account.group_account_user,account.group_account_manager" 
              sequence="6"/>

  </data>
</openerp>
